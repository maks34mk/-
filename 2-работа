#include<iostream>
using namespace std;
int main()
{
	int num1, num2, res,num3;
	char i;
	while (true) {
		
		setlocale(0, "");
		cout << "Нажмите любую цифру,а затем Enter " << endl;
		cin >> num3;

		cout << "Введите первое число" << endl;
		cin >> num1;

		cout << "Введите второе число" << endl;
		cin >> num2;

		cout << "Введите действие,которое вы хотите выполнить (+,*,/,% или -)" << endl;
		cin >> i;

		if (i == '-')
		{
			res = num1 - num2;
			cout << num1 << "-" << num2 << "=" << res;



		}
		else if (i == '*')
		{
			res = num1 * num2;
			cout << num1 << "*" << num2 << "=" << res;

		}
		else if (i == '/')
		{
			res = num1 / num2;
			cout << num1 << "/" << num2 << "=" << res;

		}
		else if (i == '+')
		{
			res = num1 + num2;
			cout << num1 << "+" << num2 << "=" << res;
		}
		else if (i == '%')
		{
			res = num1 % num2;
			cout << num1 << "%" << num2 << "=" << res;
		}
		else
			cout << "Введены некорректные данные!!!";
	}
		return 0;



}
